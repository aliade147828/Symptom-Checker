        <form id="profile-form" method="post" enctype="multipart/form-data">

<div class="row">
    <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control"  />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Input.WorkingHours"></label>
                <input asp-for="Input.WorkingHours" class="form-control" />
                <span asp-validation-for="Input.WorkingHours" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Location"></label>
                <input asp-for="Input.Location" class="form-control" />
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Input.DNO"></label>
                <input asp-for="Input.DNO" class="form-control" />
                <span asp-validation-for="Input.DNO" class="text-danger"></span>
            </div>
           

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
   
    </div>
    <div class="col-md-6">

        <div class="form-group">   <label asp-for="Input.profilePic" class="w-100"></label>
            @if(Model.Input.profilePic != null)
            {
                    <img id="profilePic" alt="profile picture" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.profilePic))">
           }else
           {
                  <img id="profilePic" alt="profile picture" src="~/img/default-user-image.png" width="300px" height="300px">

             }<div class="custom-file mt-3" >
                 <input type="file"  asp-for="Input.profilePic" class="custom-file-input"
                 onchange="document.getElementById('profilePic').src=window.URL.createObjectURL(this.files[0])"/>
                 <label class="custom-file-label" asp-for="Input.profilePic" >choose profile pic</label>
                  <span asp-validation-for="Input.profilePic" class="text-danger"></span>

             </div>

            </div>
        </div>
</div>
     </form>

