@model RequestViewModel
@{
    ViewData["Title"] = "SendRequest";
}

<form asp-action="SendRequest" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Full Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Your E-Mail" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CV" class="form-label"></label>
        <input asp-for="CV" class="form-control-file" placeholder="Full Name" />
    </div>
    <div class="btn-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mx-3">Back To Home</a>
    </div>

</form>