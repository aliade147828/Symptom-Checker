@model IEnumerable<RequestViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Status</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Name</td>
                    <td>@request.Email</td>

                        <td>@request.Status</td>
                    
                    <td> <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-primary"> Details</a></td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>There is No Requests!</h4>
    </div>
}

