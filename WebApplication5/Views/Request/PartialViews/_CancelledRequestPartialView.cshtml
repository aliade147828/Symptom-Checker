@model RequestViewModel
<div class="modal fade cancelled" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Cancelled Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-action="Cancelled" asp-controller="Request" class="appoinment-form">
                    <div class="mb-2">
                        <input asp-for="Id" hidden />
                        <p class="text-danger font-weight-bold">Are You Sure You Want To Cancelled this Request?!!</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-dark btn-round-full">Cancelled Request</button>
                        <button type="button" class="btn btn-secondary btn-round-full" onclick="OnCloseModalCancelled()">Close</button>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


