@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container">
    <div class="Row mb-3">
        <div class="col-6">
            Departments List
        </div>
        <div class="col-6">
            <a asp-action="Create"  class="btn btn-primary">Create New Department</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Department Name</td>
                
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.Name</td>


                        <td> <a asp-action="Details" asp-route-id="@department.DNO" class="btn btn-primary"> Details</a></td>
                        <td> <a asp-action="Edit" asp-route-id="@department.DNO" class="btn btn-info"> Edit</a></td>
                        <td> <a asp-action="Delete" asp-route-id="@department.DNO" class="btn btn-delete"> Delete</a></td>


                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>There is No Department!</h4>
        </div>
    }
</div>
